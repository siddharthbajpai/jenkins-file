pipeline {
    agent any

    environment {
        // Uncomment and configure if using AWS credentials
        // AWS_CREDENTIALS = 'your-aws-credentials-id'
        // AWS_REGION = 'us-east-1'
    }

    parameters {
        string(name: 'BRANCH', defaultValue: 'main', description: 'Git branch to build')
    }

    stages {
        stage('Clone') {
            steps {
                // Clone the GitHub repository
                git credentialsId: 'Github',
                    branch: params.BRANCH,
                    url: 'https://github.com/siddharthbajpai/testjenkins.git'
            }
        }

        stage('Terraform Init') {
            steps {
                // Initialize Terraform
                sh 'terraform init'
            }
        }

        stage('Terraform Plan') {
            steps {
                // Generate Terraform plan
                sh 'terraform plan'
            }
        }

        // Uncomment and configure if you want to apply Terraform changes
        // stage('Terraform Apply') {
        //     steps {
        //         withCredentials([aws(credentialsId: "${env.AWS_CREDENTIALS}", region: "${env.AWS_REGION}")]) {
        //             sh 'terraform apply -auto-approve'
        //         }
        //     }
        // }

    }

    post {
        always {
            // Actions that should run after every build, regardless of the outcome
            echo 'Cleaning up...'
        }
        success {
            // Actions that should run if the build succeeds
            echo 'Terraform plan completed successfully!'
        }
        failure {
            // Actions that should run if the build fails
            echo 'Terraform plan failed!'
        }
    }
}
