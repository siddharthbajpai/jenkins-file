pipeline {
    agent any
    
    environment {
        // Define Terraform version and workspace if needed
        TERRAFORM_VERSION = '1.3.7'
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from SCM
                checkout scm
            }
        }
        
        stage('Terraform Init') {
            steps {
                script {
                    // Initialize Terraform
                    sh 'terraform init'
                }
            }
        }
        
        stage('Terraform Plan') {
            steps {
                script {
                    // Run Terraform plan
                    sh 'terraform plan'
                }
            }
        }
        
        //stage('Terraform Apply') {
            steps {
                script {
                    // Apply Terraform configuration
                    // You might want to add manual approval before this step in a real scenario
                    //sh 'terraform apply -auto-approve'
                }
            }
        }
    }
    
    post {
        always {
            // Clean up actions, e.g., send notifications
        }
    }
}
